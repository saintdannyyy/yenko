{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": [
      "ES2020"
    ],
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "ignoreDeprecations": "6.0",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@yenko/shared": [
        "../../packages/shared/src"
      ],
      "@yenko/shared/*": [
        "../../packages/shared/src/*"
      ]
    }
  },
  "include": [
    "src",
    "scripts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}